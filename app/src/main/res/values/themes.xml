<resources>
    <!-- Base application theme. -->
    <style name="Theme.BioReino" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde_escuro</item>
        <item name="colorPrimaryDark">@color/verde_escuro</item>
        <item name="colorAccent">@color/verde_claro_azulado</item>
        <!-- Customize your theme here. -->
        <item name="android:colorEdgeEffect">@color/light_gray</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Componentes Personalizados. -->
    </style>

    <style name="Theme.BioReino.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BioReino.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BioReino.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>