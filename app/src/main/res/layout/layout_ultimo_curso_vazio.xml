<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:id="@+id/layout_ultimo_curso_vazio_icone"

        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"

        android:contentDescription="@string/folhas_secas"

        android:src="@drawable/ic_folhas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/layout_ultimo_curso_vazio_texto"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:fontFamily="@font/fredoka_regular"
        android:lineSpacingExtra="3dp"
        android:text="@string/nenhum_curso_iniciado"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_ultimo_curso_vazio_icone"

        />

</androidx.constraintlayout.widget.ConstraintLayout>