<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true">

    <ImageView
        android:id="@+id/item_card_aula_imagem"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:contentDescription="@string/imagem_do_cartao"
        android:scaleType="centerCrop"

        android:src="@drawable/image_jaguar"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="0dp"
        app:cardCornerRadius="10dp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Cabeçalho-->
            <TextView
                android:id="@+id/item_card_aula_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"

                android:fontFamily="@font/valeraround_regular"
                android:lines="1"
                android:scrollHorizontally="true"

                android:textColor="@color/black"
                android:textSize="18sp"

                app:layout_constraintBottom_toTopOf="@id/item_card_aula_professor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                android:text="O Título do Curso" />

            <TextView
                android:id="@+id/item_card_aula_professor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"

                android:fontFamily="@font/valeraround_regular"
                android:lines="1"
                android:textSize="14sp"

                app:layout_constraintBottom_toTopOf="@id/item_card_aula_ultimo_curso_divisao"
                app:layout_constraintEnd_toEndOf="@id/item_card_aula_titulo"
                app:layout_constraintStart_toStartOf="@id/item_card_aula_titulo"
                app:layout_constraintTop_toBottomOf="@id/item_card_aula_titulo"

                android:text="Prof: LUPPO C. e NOVAES P." />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_card_aula_ultimo_curso_divisao"
                android:layout_height="3dp"
                android:layout_width="0dp"
                app:cardElevation="0dp"

                android:layout_marginVertical="8dp"

                app:cardBackgroundColor="@color/verde_claro_azulado"

                app:layout_constraintStart_toStartOf="@id/item_card_aula_professor"
                app:layout_constraintEnd_toEndOf="@id/item_card_aula_professor"
                app:layout_constraintTop_toBottomOf="@id/item_card_aula_professor"
                app:layout_constraintBottom_toTopOf="@id/item_card_aula_ultimo_curso_continuar"

                />

            <!--Etapas-->
            <TextView
                android:id="@+id/item_card_aula_ultimo_curso_continuar"

                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/valeraround_regular"
                android:text="@string/ultimo_curso_continuar"
                android:textColor="@color/black"
                android:textSize="16sp"

                app:layout_constraintBottom_toTopOf="@id/item_card_aula_ultimo_curso_aula"
                app:layout_constraintStart_toStartOf="@id/item_card_aula_professor"
                app:layout_constraintTop_toBottomOf="@id/item_card_aula_ultimo_curso_divisao"


                />

            <include
                android:id="@+id/item_card_aula_ultimo_curso_aula"
                layout="@layout/item_aulas_curso"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="14dp"

                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_card_aula_ultimo_curso_continuar"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>